{
    "name": "ramona/automation-platform-lib-build",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Ramona\\AutomationPlatformLibBuild\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Ramona\\AutomationPlatformLibBuild\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../libraries/php/coding-standard/"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "thecodingmachine/safe": "^1.3.3",
        "monolog/monolog": "^2.3",
        "bramus/ansi-php": "^3.1",
        "symfony/process": "^5.3 || ^6.0",
        "psr/log": "^2.0 | ^3.0",
        "webmozart/assert": "^1.10",
        "galbar/jsonpath": "^2.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^9.4 || ^10.0",
        "ramona/automation-platform-lib-coding-standard": "*",
        "vimeo/psalm": "^4.8",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^3.0",
        "infection/infection": "^0.25.3",
        "psalm/plugin-phpunit": "^0.16.1"
    },
    "bin": [
        "bin/build.php"
    ]
}
