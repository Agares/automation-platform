{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.ramona.fun/automation-platform/v1/events/events.schema.json",
  "title": "Home Automation/events",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "id": {
          "description": "Unique identifier of the event",
          "type": "string",
          "format": "uuid"
        },
        "created_timestamp": {
          "description": "Creation time of the event",
          "type": "string",
          "format": "date-time"
        }
      }
    },
    {
      "anyOf": [
        {
          "properties": {
            "type": {
              "type": "string",
              "const": "file.status.created"
            },
            "path": {
              "type": "string",
              "description": "Relative path of the file (relative to the root of the mount)"
            },
            "mount_id": {
              "type": "string"
            }
          },
          "required": ["path", "mount_id"]
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "const": "file.status.deleted"
            },
            "path": {
              "type": "string",
              "description": "Relative path of the file (relative to the root of the mount)"
            },
            "mount_id": {
              "type": "string"
            }
          },
          "required": ["path", "mount_id"]
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "const": "file.status.changed"
            },
            "path": {
              "type": "string",
              "description": "Relative path of the file (relative to the root of the mount)"
            },
            "mount_id": {
              "type": "string"
            }
          },
          "required": ["path", "mount_id"]
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "const": "file.status.moved"
            },
            "from": {
              "type": "string",
              "description": "Relative path of the file (relative to the root of the mount)"
            },
            "to": {
              "type": "string",
              "description": "Relative path of the file (relative to the root of the mount)"
            },
            "mount_id": {
              "type": "string"
            }
          },
          "required": ["from", "to", "mount_id"]
        }
      ]
    }
  ],
  "required": [
    "id",
    "created_timestamp",
    "type"
  ]
}